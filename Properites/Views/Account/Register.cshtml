@{
    ViewData["Title"] = "Rejestracja";
}

<style>
    .register-button {
        margin-top: 0.5rem; 
    }
</style>

<div class="container">
    <h2>Registration</h2>
    <form asp-action="Register">
        <div class="form-group row">
            <label for="Email" class="col-12 text-left">Email</label>
            <div class="col-12 col-md-4">
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="Password" class="col-12 text-left">Password</label>
            <div class="col-12 col-md-4">
                <input type="password" class="form-control" id="Password" name="Password" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="ConfirmPassword" class="col-12 text-left">Confirm password</label>
            <div class="col-12 col-md-4">
                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 col-md-4">
                <button type="submit" class="btn btn-success register-button">Register</button>
            </div>
        </div>
    </form>
</div>

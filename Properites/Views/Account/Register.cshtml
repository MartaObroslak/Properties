@model RegisterUserModel
@{
    ViewData["Title"] = "Rejestracja";
}

<style>
    .register-button {
        margin-top: 0.5rem; 
    }
</style>

<div class="container">
    <h2>Registration</h2>
    <form asp-action="Register">
        <div class="form-group row">
            <label for="Email" class="col-12 text-left">Email</label>
            <div class="col-12 col-md-4">
               
                @Html.TextBoxFor(m => m.Email, new{@class="form-control"})
            </div>
        </div>
        <div class="form-group row">
            <label for="Password" class="col-12 text-left">Password</label>
            <div class="col-12 col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="ConfirmPassword" class="col-12 text-left">Confirm password</label>
            <div class="col-12 col-md-4">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div>
            @Html.ValidationSummary()
        </div>
        <div class="form-group row">
            <div class="col-12 col-md-4">
                <button type="submit" class="btn btn-success register-button">Register</button>
            </div>
        </div>
    </form>
</div>
